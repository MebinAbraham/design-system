---
layout: none
---
{% extends "styles/page-template/_template.njk" %}

{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/panel/_macro.njk" import onsPanel %}
{% from "components/lists/_macro.njk" import onsList %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/date-input/_macro.njk" import onsDateInput %}
{% from "components/checkboxes/_macro.njk" import onsCheckboxes %}
{% from "components/password/_macro.njk" import onsPassword %}
{% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}

{% set pageConfig = {
    "title": "Errors Prototype"
} %}

{% block preMain %}
    {{
        onsBreadcrumb({
            "ariaLabel": 'Breadcrumb',
            "itemsList": [
                {
                    "url": '/',
                    "text": 'Home'
                },
                {
                    "url": '/patterns',
                    "text": 'Patterns'
                },
                {
                    "url": '/patterns/error-validation',
                    "text": 'Correct errors'
                },
                {
                    "url": '/patterns/error-validation/examples/errors-proto/',
                    "text": 'Error Prototype',
                    "current": true
                }
            ]
        })
    }}
{% endblock %}

{% block main %}
    {% call onsPanel({
            "title": "There are 7 problems with your answer",
            "type": "error",
            "classes": "question__errors"
        })
    %}
        {{
            onsList({
                "element": "ol",
                "itemsList": [
                    {
                        "text": "Enter a number",
                        "url": "#number",
                        "classes": "js-inpagelink"
                    },
                    {
                        "text": "Enter a number less than or equal to 100",
                        "url": "#suffixed",
                        "classes": "js-inpagelink"
                    },
                    {
                        "text": "Select an answer",
                        "url": "#radios-error",
                        "classes": "js-inpagelink"
                    },
                    {
                        "text": "Enter a date of birth",
                        "url": "#date",
                        "classes": "js-inpagelink"
                    },
                    {
                        "text": "Select at least one answer",
                        "url": "#check",
                        "classes": "js-inpagelink"
                    },
                    {
                        "text": "Enter password",
                        "url": "#pass",
                        "classes": "js-inpagelink"
                    },
                    {
                        "text": "Enter an email address",
                        "url": "#email",
                        "classes": "js-inpagelink"
                    }
                ]
            })
        }}
    {% endcall %}

    {% call onsQuestion ({
        "title": "How many employees do you pay on a monthly basis?",
        "legendIsPageTitle": true
    }) %}

        {{
            onsRadios({
                "dontWrap": true,
                "name": "food",
                "id": "radios",
                "error": {
                    "text": "Select an answer",
                    "id": "radios-error"
                },
                "radios": [
                    {
                        "id": "a",
                        "label": {
                            "text": "1 - 10 employees"
                        },
                        "value": "a"
                    },
                    {
                        "id": "b",
                        "label": {
                            "text": "6 - 10 employees"
                        },
                        "value": "b"
                    },
                    {
                        "id": "c",
                        "label": {
                            "text": "More than 10 employees"
                        },
                        "value": "other",
                        "other": {
                            "open": true,
                            "id": "other-textbox",
                            "name": "other-answer",
                            "label": {
                                "text": "Please specify other"
                            }
                        }
                    }
                ]
            })
        }}
    {% endcall %}

    {{
        onsButton({
            "type": "button",
            "text": "Save and continue",
            "classes": "u-mt-xl"
        })
    }}
{% endblock %}
